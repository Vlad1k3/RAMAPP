<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="moduleApp.ManualWindow"
        Title="История запуска"
        Width="600"
        Height="400"
        CornerRadius="10"
        Background="#302e28"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <StackPanel Margin="0, 20, 0, 0" Spacing="20" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center">
            <Button Click="DisplayEventsForUser" Content="Показать историю" />
            <Button Click="DeleteAllEvents" Content="Удалить историю" />
            <Button Click="CloseWindow" Content="Вернуться"/>
        </StackPanel>

        <StackPanel Spacing="20" Margin="0, 30, 0, 0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Установка фиксированных размеров и включение прокрутки для ListBox -->
            <ListBox x:Name="ResultsListBox" Width="500" Height="300" />
        </StackPanel>
    </Grid>
</Window>
